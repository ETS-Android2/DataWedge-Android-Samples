<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/bad_package">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Place Package\nAside"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"/>

            <ImageView
                android:id="@+id/imageBadge"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/red_x" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/light_blue"
            android:text="DONE"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:onClick="doneClicked"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/light_blue"
            android:text="CONTACT\nSUPERVISOR"
            android:textSize="9pt"
            android:textColor="@color/white"
            android:onClick="contactSupervisor"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>